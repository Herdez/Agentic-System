{
  "name": "blockchain-defense-system",
  "version": "1.0.0",
  "description": "Sistema de defensa descentralizada con agentes AI para redes blockchain",
  "main": "server/app.js",
  "scripts": {
    "start-app": "node start.js",
    "start": "node start.js",
    "start:production": "node production-server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "build:client": "cd client && npm run build",
    "build:netlify": "cd client && npm install && DISABLE_ESLINT_PLUGIN=true npm run build",
    "build:production": "npm run install:all && npm run build:client",
    "production": "cd server && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "heroku-postbuild": "npm run build:production"
  },
  "keywords": [
    "blockchain",
    "ai",
    "security",
    "agents",
    "defense",
    "react",
    "nodejs"
  ],
  "author": "Abel Rodriguez",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "open": "^8.4.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.2",
    "dotenv": "^16.3.1",
    "serverless-http": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
